<Page x:Name="page"
    x:Class="app.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="myGrid" Background="Wheat">
        <TextBlock x:Name="myTextBlock" Margin="373,404,0,0" TextWrapping="Wrap" 
                   Text="Hello World" Height="274" Width="465" SelectionChanged="TextBlock_SelectionChanged" 
                   FontSize="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Guzik" Margin="0,105,0,0" VerticalAlignment="Top" Height="162" Width="336" 
                HorizontalAlignment="Center" FontSize="72" FontWeight="Bold" Click="Button_Click">
            <Button.Flyout>
                <DatePickerFlyout/>
            </Button.Flyout>
        </Button>
        <CheckBox Content="CheckBox" Margin="169,659,0,0" VerticalAlignment="Top" Height="154" Width="373" 
                  FontSize="72" IsChecked="False" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <Slider HorizontalAlignment="Left" Height="81" Margin="85,146,0,0" VerticalAlignment="Top" Width="305" FontSize="30"/>

    </Grid>
</Page>
